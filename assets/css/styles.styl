
*
  box-sizing: border-box;

body
  font-size 1rem
  width 100%
  margin 0
  padding 0
  
  ul#menu
    position fixed
    list-style-type none
    z-index 10
    
    li
      padding 0.3rem 0.5rem
      margin 1rem
      display inline
      border 1px solid black
      border-radius 4px
      
      a
        color black
        text-decoration none
  
  .save-the-date
    display block
    margin 2rem auto
    width 100%
    max-width 600px
    -webkit-box-shadow 10px 10px 217px 70px rgba(0,0,0,0.26)
    -moz-box-shadow 10px 10px 217px 70px rgba(0,0,0,0.26)
    box-shadow 10px 10px 217px 70px rgba(0,0,0,0.26)
    border 1px solid darkgrey
    
    
  .rsvp
    width 50%
    margin 0 auto
    
    h1
      font-size 1rem
      
    .coming-message, .not-coming-message
      display none
      
    &.thank-you-for-your-rsvp-coming
      .coming-message
        display block
      
      .rsvp-form
        display none
        
    &.thank-you-for-your-rsvp-not-coming
      .not-coming-message
        display block
      
      .rsvp-form
        display none
        
        
    .rsvp-form
      .form-section
        label
          width 100%
          display block
          
        input, textarea
          width 100%
          display block