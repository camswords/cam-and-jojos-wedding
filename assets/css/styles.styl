
*
  box-sizing: border-box;

body
  font-size 1rem
  width 100%
  margin 0
  padding 0
  
  img
    width 100%
    display block
  
  #footer
    position fixed
    left 0
    bottom 0
    z-index 10
    background-color #333
    width 100%
    height 3rem;
    
  ul#menu
    position fixed
    list-style-type none
    z-index 10
    background-color #333
    width 100%
    top 0
    left 0
    margin 0
    padding 0.2rem 0
    
    li
      margin 1rem
      display inline
      
      a
        text-decoration none

  #section-welcome
    background url('http://res.cloudinary.com/df4mulofv/image/upload/c_crop,x_10,y_10,w_680,h_490/w_1000,e_grayscale/chateau-cazenac-france-wedding_0013_o5ggzy.jpg')
    background-repeat no-repeat
    background-size 100%
    position relative
    
    .save-the-date
      width 50%
      max-width 321px
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      padding 10px 10px 50px 10px
      background-color white
      -webkit-box-shadow 0 3px 6px rgba(0,0,0,.25)
      
      img
        border 1px solid black
      
    
  .rsvp
    width 50%
    margin 0 auto
    padding-top 3rem
      
    .ui.info.message.coming-message, .ui.info.message.not-coming-message
      display none
      
    &.thank-you-for-your-rsvp-coming
      .ui.info.message.coming-message
        display block
      
      .rsvp-form
        display none
        
    &.thank-you-for-your-rsvp-not-coming
      .ui.info.message.not-coming-message
        display block
      
      .rsvp-form
        display none
