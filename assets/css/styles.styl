
*
  box-sizing: border-box;

body
  font-size 1rem
  width 100%
  margin 0
  padding 0
  
  ul#menu
    position fixed
    list-style-type none
    z-index 10
    
    li
      margin 1rem
      display inline
      
      a
        text-decoration none
  
  .save-the-date
    display block
    margin 2rem auto
    width 100%
    max-width 600px
    -webkit-box-shadow 10px 10px 217px 70px rgba(0,0,0,0.26)
    -moz-box-shadow 10px 10px 217px 70px rgba(0,0,0,0.26)
    box-shadow 10px 10px 217px 70px rgba(0,0,0,0.26)
    border 1px solid darkgrey
    
    
  .rsvp
    width 50%
    margin 0 auto
      
    .ui.info.message.coming-message, .ui.info.message.not-coming-message
      display none
      
    &.thank-you-for-your-rsvp-coming
      .ui.info.message.coming-message
        display block
      
      .rsvp-form
        display none
        
    &.thank-you-for-your-rsvp-not-coming
      .ui.info.message.not-coming-message
        display block
      
      .rsvp-form
        display none
