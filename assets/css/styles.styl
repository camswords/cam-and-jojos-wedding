
*
  box-sizing: border-box;

body
  font-size 1rem
  width 100%
  margin 0
  padding 0
  
  ul#menu
    position fixed
    list-style-type none
    z-index 10
    background-color #333
    width 100%
    top 0
    left 0
    margin 0
    padding 0.2rem 0
    
    li
      margin 1rem
      display inline
      
      a
        text-decoration none

  #section-welcome
    background url('http://www.mckinley-rodgers.co.uk/wp-content/uploads/2014/07/chateau-cazenac-france-wedding_0013.jpg')
    background-repeat no-repeat
    background-size 100%
    
    .save-the-date
      margin 2rem auto
      width 100%
      max-width 600px
      -webkit-box-shadow 10px 10px 217px 70px rgba(0,0,0,0.26)
      -moz-box-shadow 10px 10px 217px 70px rgba(0,0,0,0.26)
      box-shadow 10px 10px 217px 70px rgba(0,0,0,0.26)
      border 1px solid darkgrey
    
    
  .rsvp
    width 50%
    margin 0 auto
      
    .ui.info.message.coming-message, .ui.info.message.not-coming-message
      display none
      
    &.thank-you-for-your-rsvp-coming
      .ui.info.message.coming-message
        display block
      
      .rsvp-form
        display none
        
    &.thank-you-for-your-rsvp-not-coming
      .ui.info.message.not-coming-message
        display block
      
      .rsvp-form
        display none
